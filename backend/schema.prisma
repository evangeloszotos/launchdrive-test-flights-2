datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
  s3Secret String @default("")

  @@index([s3Secret])
}

model FakeDoorTest {
  id   String @id @default(cuid())
  name String @default("")
}

model Product {
  id       String    @id @default(cuid())
  name     String    @default("")
  comments Comment[] @relation("Comment_product")
}

model Post {
  id         String    @id @default(cuid())
  name       String    @default("")
  content    String    @default("")
  viewsCount Int?      @default(0)
  comments   Comment[] @relation("Comment_post")
}

model Comment {
  id        String   @id @default(cuid())
  name      String   @default("")
  content   String   @default("")
  product   Product? @relation("Comment_product", fields: [productId], references: [id])
  productId String?  @map("product")
  post      Post?    @relation("Comment_post", fields: [postId], references: [id])
  postId    String?  @map("post")

  @@index([productId])
  @@index([postId])
}